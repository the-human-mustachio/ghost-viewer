{
  "name": "@_mustachio/ghost-viewer",
  "version": "1.0.10",
  "description": "Visualizer and Orphan Hunter for SST State",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "ghost-viewer": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev:ui": "vite",
    "dev:server": "tsx watch server/index.ts",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:ui\"",
    "build:ui": "tsc && vite build",
    "build:server": "tsup server/cli.ts --format esm --out-dir dist --target node20 --no-splitting --minify",
    "build": "npm run build:ui && npm run build:server",
    "release": "npm version",
    "prepublishOnly": "npm run build",
    "postversion": "git push origin main --follow-tags && npm publish",
    "preview": "vite preview",
    "start": "node dist/cli.js"
  },
  "dependencies": {
    "@aws-sdk/client-resource-groups-tagging-api": "^3.500.0",
    "@aws-sdk/client-s3": "^3.958.0",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.300.0",
    "open": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/update-notifier": "^6.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
